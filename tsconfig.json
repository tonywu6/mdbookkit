  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist", "target", "docs/book", "docs/theme"]
}
